---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@synoem/ui/lib/utils";

interface Props extends HTMLAttributes<"td"> {
  class?: string;
}

const { class: className, ...rest }: Props = Astro.props;
---

<td
  data-slot="table-cell"
  class={cn(
    "p-2 align-middle whitespace-normal [&:has([role=checkbox])]:pr-0 [&>[role=checkbox]]:translate-y-[2px]",
    className,
  )}
  {...rest}
>
  <slot />
</td>
